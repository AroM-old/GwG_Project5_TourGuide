<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescriptionActivity"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/description_imageview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_125"
        android:scaleType="fitXY"
        android:src="@drawable/acuario_nacional"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/name_textview"
        style="@style/list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_imageview"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Name of the place" />

    <LinearLayout
        android:id="@+id/gray_txt_block_linearLayout"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@color/block_text"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_textview">

        <TextView
            android:id="@+id/description_textview"
            style="@style/list_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_24"
            android:layout_marginRight="@dimen/margin_24"
            android:layout_marginTop="@dimen/margin_8"
            android:gravity="fill_vertical"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="@dimen/spacing_2"
            android:padding="@dimen/zero"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_textview"
            app:layout_constraintVertical_bias="0.0"
            tools:text="A brief description of the place." />

    </LinearLayout>


    <TextView
        android:id="@+id/location_textview"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/height_19"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginLeft="@dimen/margin_32"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_marginStart="@dimen/margin_32"
        app:layout_constraintBottom_toBottomOf="@+id/location_imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/location_imageView"
        app:layout_constraintTop_toTopOf="@+id/location_imageView"
        app:layout_constraintVertical_bias="0.0"
        tools:text="C/ Mella No.2 Urb. Francisco Rosario, Rep, Dom" />

    <TextView
        android:id="@+id/contact_textview"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/height_19"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginLeft="@dimen/margin_32"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_marginStart="@dimen/margin_32"
        app:layout_constraintBottom_toBottomOf="@+id/call_imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/call_imageView2"
        app:layout_constraintTop_toTopOf="@+id/call_imageView2"
        app:layout_constraintVertical_bias="0.888"
        tools:text="@tools:sample/us_phones" />

    <TextView
        android:id="@+id/website_textview"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/height_19"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginLeft="@dimen/margin_32"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_marginStart="@dimen/margin_32"
        android:layout_marginTop="@dimen/margin_8"
        app:layout_constraintBottom_toBottomOf="@+id/website_imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/website_imageView2"
        app:layout_constraintTop_toTopOf="@+id/website_imageView2"
        app:layout_constraintVertical_bias="0.888"
        tools:text="https://www.none.com" />

    <ImageView
        android:id="@+id/directions_imageView"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_16"
        android:src="@drawable/ic_directions_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/call_imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gray_txt_block_linearLayout"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/directions_textView"
        android:layout_width="@dimen/width_128"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8"
        android:gravity="center_horizontal"
        android:text="@string/directions_textview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/call_textView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/directions_imageView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/call_imageView"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_16"
        android:src="@drawable/ic_call_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/website_imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/directions_imageView"
        app:layout_constraintTop_toBottomOf="@+id/gray_txt_block_linearLayout"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/call_textView"
        android:layout_width="@dimen/width_128"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8"
        android:gravity="center_horizontal"
        android:text="@string/call_textview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/website_textView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/directions_textView"
        app:layout_constraintTop_toBottomOf="@+id/call_imageView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/website_imageView"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_16"
        android:src="@drawable/ic_public_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/call_imageView"
        app:layout_constraintTop_toBottomOf="@+id/gray_txt_block_linearLayout"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/website_textView"
        android:layout_width="@dimen/width_128"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8"
        android:gravity="center_horizontal"
        android:text="@string/website_textview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/call_textView"
        app:layout_constraintTop_toBottomOf="@+id/website_imageView"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/height_75"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/call_textView"
        app:layout_constraintVertical_bias="0.0"
        tools:context=".MapsActivity" />

    <ImageView
        android:id="@+id/location_imageView"
        android:layout_width="@dimen/dimens_18"
        android:layout_height="@dimen/dimens_18"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_16"
        android:src="@drawable/ic_location_on_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/call_imageView2"
        android:layout_width="@dimen/dimens_18"
        android:layout_height="@dimen/dimens_18"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_16"
        android:src="@drawable/ic_call_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_imageView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/website_imageView2"
        android:layout_width="@dimen/dimens_18"
        android:layout_height="@dimen/dimens_18"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_16"
        android:src="@drawable/ic_public_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/call_imageView2"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>