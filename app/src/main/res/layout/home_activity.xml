<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/header_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31"
        style="@style/home_bg"
        app:srcCompat="@drawable/placeholder_header" />

    <TextView
        android:id="@+id/title_header_dr"
        android:text="@string/let_go_dr"
        app:layout_constraintBottom_toBottomOf="@+id/header_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/home_title"
        app:layout_constraintVertical_bias="0.206" />

    <TextView
        android:text="@string/description"
        app:layout_constraintBottom_toBottomOf="@+id/header_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_header_dr"
        style="@style/home_description"
        app:layout_constraintVertical_bias="0.22" />

</android.support.constraint.ConstraintLayout>