<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="list_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">@dimen/margin_8</item>
        <item name="android:layout_marginLeft">@dimen/margin_24</item>
        <item name="android:layout_marginRight">@dimen/margin_8</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">@dimen/margin_24</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_description">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">@dimen/margin_8</item>
        <item name="android:layout_marginLeft">@dimen/margin_24</item>
        <item name="android:layout_marginRight">@dimen/margin_8</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">@dimen/margin_24</item>
        <item name="android:layout_marginTop">@dimen/margin_2</item>
        <item name="android:gravity">top</item>
        <item name="android:textAppearance">?android:preferenceInformationStyle</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="home_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">@dimen/margin_8</item>
        <item name="android:layout_marginLeft">@dimen/margin_8</item>
        <item name="android:layout_marginRight">@dimen/margin_8</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">@dimen/margin_8</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/shrikhand_regular</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_40</item>
    </style>

    <style name="home_description">
        <item name="android:layout_width">@dimen/width_349</item>
        <item name="android:layout_height">@dimen/height_242</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">@dimen/margin_8</item>
        <item name="android:layout_marginLeft">@dimen/margin_8</item>
        <item name="android:layout_marginRight">@dimen/margin_8</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">@dimen/margin_8</item>
        <item name="android:justificationMode" tools:ignore="NewApi">inter_word</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:padding">@dimen/margin_8</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="home_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:contentDescription">@string/girl_on_beach</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:tintMode" tools:ignore="NewApi">multiply</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="list_image">
        <item name="android:layout_width">@dimen/dimes_100</item>
        <item name="android:layout_height">@dimen/dimes_100</item>
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:contentDescription">@string/thumbnail_image</item>
    </style>

</resources>
